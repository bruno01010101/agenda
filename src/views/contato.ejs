<%- include('includes/head') %>
<%- include('includes/nav') %>
<main>
    <h1>Contato</h1>
    <p>Crie ou edite seus contatos</p>
    <%- include('includes/messages'); %>

    <div class="formularios">
        <% if(contato._id) { %>
        <form action="/contatos/edit/<%= contato._id %>" method="post">
        <% } else { %>
        <form action="/contatos/register" method="post">
        <% } %> 
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <h2 style="padding-bottom: 20px;">Contato</h2>

            <label for="nome">Nome</label>
            <input value="<%= contato.nome%>" type="text" name="nome" id="nome">

            <label for="sobrenome">sobrenome</label>
            <input value="<%= contato.sobrenome%>" type="text" name="sobrenome" id="sobrenome">

            <label for="email">email</label>
            <input value="<%= contato.email%>" type="email" name="email" id="email">

            <label for="telefone">telefone</label>
            <input value="<%= contato.telefone%>" type="tel" name="telefone" id="telefone">

            <button class="btnCadastro">Salvar</button>
        </form>
    </div>
</main>
<%- include('includes/footer') %>
